{
	"name": "@joshdb/core",
	"version": "2.0.0",
	"description": "JavaScript Object Storage Helper",
	"author": "Evelyne Lachance <eslachance@gmail.com> (https://evie.codes/)",
	"license": "Apache-2.0",
	"private": false,
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"lint": "eslint src tests scripts --ext mjs,ts --fix",
		"format": "prettier --write {src,tests,scripts}/**/*.{mjs,ts}",
		"test": "jest --verbose",
		"test:watch": "jest --verbose --watch",
		"update": "yarn upgrade-interactive --latest",
		"clean": "node scripts/clean-dist.mjs",
		"build": "tsc -b src && rollup -c scripts/rollup.bundle.ts",
		"watch": "tsc -b src -w",
		"commit": "git-cz --disable-emoji",
		"prepublishOnly": "rollup-type-bundler",
		"prepare": "husky install .github/husky"
	},
	"dependencies": {
		"@realware/utilities": "^2.0.2",
		"@sapphire/pieces": "^3.0.1",
		"@sapphire/utilities": "^3.0.2"
	},
	"devDependencies": {
		"@commitlint/cli": "^13.2.1",
		"@commitlint/config-conventional": "^13.2.0",
		"@favware/rollup-type-bundler": "^1.0.5",
		"@sapphire/eslint-config": "^3.3.1",
		"@sapphire/ts-config": "^3.1.0",
		"@types/jest": "^27.0.2",
		"@types/node": "^16.10.3",
		"eslint": "^7.32.0",
		"husky": "^7.0.4",
		"jest": "^27.2.5",
		"jest-circus": "^27.2.5",
		"lint-staged": "^11.2.3",
		"prettier": "^2.4.1",
		"pretty-quick": "^3.1.1",
		"rollup": "^2.58.0",
		"rollup-plugin-version-injector": "^1.3.3",
		"ts-jest": "^27.0.4",
		"ts-node": "^10.2.1",
		"typescript": "^4.4.3"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/eslachance/josh"
	},
	"files": [
		"dist",
		"!dist/*.tsbuildinfo"
	],
	"engines": {
		"node": ">=16",
		"npm": ">=6"
	},
	"keywords": [],
	"bugs": {
		"url": "https://github.com/eslachance/josh/issues"
	},
	"homepage": "https://github.com/eslachance/josh",
	"publishConfig": {
		"access": "public"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.{mjs,js,ts}": "eslint --fix --ext mjs,js,ts"
	}
}
