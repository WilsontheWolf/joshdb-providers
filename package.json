{
	"name": "root",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"clean": "rimraf packages/**/dist packages/**/node_modules/.cache",
		"clean:full": "yarn clean && rimraf packages/**/node_modules",
		"lint": "eslint packages --ext mjs,ts --fix",
		"format": "prettier --write packages/**/{src,tests,scripts}/**/*.{mjs,ts}",
		"test": "jest --verbose",
		"test:watch": "jest --verbose --watch",
		"build": "lerna run build",
		"commit": "git-cz --disable-emoji",
		"update": "yarn upgrade-interactive --latest"
	},
	"devDependencies": {
		"@favware/rollup-type-bundler": "^1.0.3",
		"@sapphire/eslint-config": "^3.2.3",
		"@sapphire/ts-config": "^3.0.0",
		"@types/jest": "^26.0.24",
		"@types/node": "^16.4.3",
		"eslint": "^7.31.0",
		"jest": "^27.0.6",
		"jest-circus": "^27.0.6",
		"lerna": "^4.0.0",
		"prettier": "^2.3.2",
		"rollup": "^2.54.0",
		"rollup-plugin-version-injector": "^1.3.3",
		"ts-jest": "^27.0.4",
		"ts-node": "^10.1.0",
		"typescript": "^4.3.5"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/eslachance/josh-providers.git"
	},
	"engines": {
		"node": ">=14",
		"npm": ">=6"
	}
}
